<!-- first section - Hero -->
<div id="hero" class="hero">
  <div class="text-vcenter">
    <h1>$(iAm).ready();</h1><br>
    <%= link_to 'Blog', blogs_path, :class => 'btn btn-primary' %>
    <button href="#" class="btn btn-primary">Builder</button>
    <button href="#" class="btn btn-primary">Resources</button>
  </div>
</div>
<!-- /first section -->

<!-- second section - Blog -->
<div id="blog" class="pad-section">
  <h1 class="header">Thoughts on Learning to Code</h1>
  <div class="container">
    <% @blogs.last(4).each do |blog| %>
      <div class="col-sm-3 col-sm-offset-0 col-xs-6 col-xs-offset-3">
        <div class="blog-box">
          <h2><%= link_to blog.title, blog_path(blog) %></h2>
          <img id="blog-img" src="assets/bloglyph.png" />
        </div>
      </div>
    <% end %>  
  </div>
</div>
<!-- /second section -->

<!-- third section - Builder -->
<div id="builder" class="pad-section">
  <div class="container">
    <img src="#" alt="Skill Pyramid" />
  </div>
</div>
<!-- /third section -->

<!-- fourth section - Resources -->
<div id="resources" class="pad-section">
  <div class="container">
    <h1 class="header">Resources for Learning to Code</h1>
    <div class="row text-center">
      <div class="col-sm-3 col-sm-offset-0 col-xs-6 col-xs-offset-3">
        <img class="resource-img" src="assets/htmlglyph.png" />
      </div>
      <div class="col-sm-3 col-sm-offset-0 col-xs-6 col-xs-offset-3">
        <img class="resource-img" src="assets/cssglyph.png" />
      </div>
      <div class="col-sm-3 col-sm-offset-0 col-xs-6 col-xs-offset-3">
        <img class="resource-img" src="assets/javascriptglyph.png" />
      </div>
      <div class="col-sm-3 col-sm-offset-0 col-xs-6 col-xs-offset-3"> 
        <img class="resource-img" src="assets/rubyglyph.png" />
      </div>
    </div>
  </div>
</div>
<!-- /fourth section -->

<!-- fifth section - About -->
<div id="about" class="pad-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h3>About this Application</h3>
        <h4>Text here </h4>
      </div>
    </div>
  </div>
</div>
<!-- /fifth section -->

