<!DOCTYPE html>
<html>
<head>
  <title>Blocks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>
<body>

<% if notice.present? %>
  <div class="col-xs-10 col-xs-offset-1 alert alert-info"><%= notice %></div>
<% end %>
<% if alert.present? %> 
  <div class="col-xs-10 col-xs-offset-1 alert alert-danger"><%= alert %></div>
<% end %>   
<% if flash[:error].present? %>
  <div class="col-xs-10 col-xs-offset-1 alert alert-danger"><%= flash[:error].html_safe %></div> 
<% end %>

<%= yield %>

</body>
</html>
